---
import type { MarkdownInstance } from 'astro';
import type { Frontmatter } from '../frontmatter';
import PostDate from './PostDate.astro';

interface Props {
	post: MarkdownInstance<Frontmatter>;
}

const { post } = Astro.props;
const color = post.frontmatter.cardColor;

// Map color names to complete Tailwind classes
const bgColors: Record<string, string> = {
	'red': 'bg-red-100',
	'orange': 'bg-orange-100',
	'amber': 'bg-amber-100',
	'yellow': 'bg-yellow-100',
	'lime': 'bg-lime-100',
	'green': 'bg-green-100',
	'cyan': 'bg-cyan-100',
	'blue': 'bg-blue-100',
	'indigo': 'bg-indigo-100',
	'violet': 'bg-violet-100',
	'purple': 'bg-purple-100',
	'fuchsia': 'bg-fuchsia-100',
	'pink': 'bg-pink-100',
	'gray': 'bg-gray-100',
};

const borderColors: Record<string, string> = {
	'red': 'border-red-300',
	'orange': 'border-orange-300',
	'amber': 'border-amber-300',
	'yellow': 'border-yellow-300',
	'lime': 'border-lime-300',
	'green': 'border-green-300',
	'cyan': 'border-cyan-300',
	'blue': 'border-blue-300',
	'indigo': 'border-indigo-300',
	'violet': 'border-violet-300',
	'purple': 'border-purple-300',
	'fuchsia': 'border-fuchsia-300',
	'pink': 'border-pink-300',
	'gray': 'border-gray-300',
}

const bgClass = bgColors[color] || 'bg-gray-100';
const borderClass = borderColors[color] || 'border-gray-500';
---
<article class={`mb-4 ${bgClass} border-2 ${borderClass} text-gray-950 px-4 py-2 rounded`}>
	<h3 class="text-xl italic" transition:name={`post-title-${post.url}`}>
		<a href={post.url} class="underline-hover">{post.frontmatter.title}</a>
	</h3>
	{post.frontmatter.pubDate && (
		<PostDate date={post.frontmatter.pubDate} />
	)}
	{post.frontmatter.excerpt && <p>{post.frontmatter.excerpt}</p>}
</article>
